{
    "manifest_version": 2,
    "name": "Block Resources",
    "version": "1.0",
    "description": "Blocks JavaScript, CSS, fonts, geolocation requests, and cookies.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*/*",
        "cookies"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}
